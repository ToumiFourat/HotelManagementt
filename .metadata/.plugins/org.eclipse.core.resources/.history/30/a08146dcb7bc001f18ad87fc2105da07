        </div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Stars</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <%
                    List<Hotel> hotels = (List<Hotel>) request.getAttribute("hotels");
                    if (hotels != null && !hotels.isEmpty()) {
                        for (Hotel hotel : hotels) {
                %>
                <tr>
                    <td><%= hotel.getId() %></td>
                    <td><%= hotel.getName() %></td>
                    <td><%= hotel.getCity() %></td>
                    <td><%= hotel.getStars() %></td>
                    <td><%= hotel.getDescription() %></td>
                    <td>
                        <img class="hotel-image" src="uploads/<%= hotel.getImage() %>" alt="Hotel Image">
                    </td>
                    <td>
                        <button class="btn-edit" onclick="window.location.href='views/editHotel.jsp?id=<%= hotel.getId() %>'">Edit</button>
                        <button class="btn-delete" onclick="deleteHotel(<%= hotel.getId() %>)">Delete</button>
                    </td>
                </tr>
                <%
                        }
                    } else {
                %>
                <tr>
                    <td colspan="7" style="text-align: center;">No hotels available</td>
                </tr>
                <% } %>
            </tbody>
