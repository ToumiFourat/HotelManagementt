                %>
                <tr>
                    <td><%= room.getId() %></td>
                    <td><%= room.getLabel() %></td>
                    <td><%= room.getCapacity() %></td>
                    <td><%= room.getPrix() %> TND</td>
                    <td>
                        <button class="btn-edit" onclick="window.location.href='views/editRoom.jsp?id=<%= room.getId() %>'">Edit</button>
                        <button class="btn-delete" onclick="deleteRoom(<%= room.getId() %>)">Delete</button>
                    </td>
                </tr>
                <%
                        }
                    } else {
                %>
                <tr>
                    <td colspan="5" style="text-align: center;">No room types available</td>
